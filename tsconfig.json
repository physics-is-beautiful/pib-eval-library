{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "outDir": "lib",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
    // "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "coverage",
    "__test__",
    "bin",
    "jest.config.js",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "**/*.jsx",
    "src/components/vector/vectorCanvas.jsx"
  ],
  "include": [
    "src"
  ]
}
